# Use localhost when the PostgreSQL container exposes port 5432
DATABASE_URL=postgresql+psycopg2://postgres:postgres@localhost:5432/health_seeker
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1
ENABLE_BACKGROUND_WORKERS=true
ENABLE_EVENT_SUBSCRIBERS=true

JWT_SECRET_KEY=change-me
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Optional bootstrap superadmin credentials for `make init-db`
SUPERADMIN_EMAIL=admin@example.com
SUPERADMIN_PASSWORD=change-me
SUPERADMIN_FULL_NAME=Super Admin

# For docker compose containers, override with service hostnames, e.g.:
# DATABASE_URL=postgresql+psycopg2://postgres:postgres@postgres:5432/health_seeker
# CELERY_BROKER_URL=redis://redis:6379/0
# CELERY_RESULT_BACKEND=redis://redis:6379/1
